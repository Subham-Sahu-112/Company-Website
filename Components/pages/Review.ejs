    pointer-events: none;
    position: absolute;
  }
  .review-card.active {
    opacity: 1;
    pointer-events: auto;
    animation: fadeIn 1s ease forwards;
  }
  .review-card.inactive {
    opacity: 0;
    pointer-events: none;
    animation: fadeOut 1s ease forwards;
  }
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  @keyframes fadeOut {
    from {
      opacity: 1;
      transform: translateX(0);
    }
