  .member-6 {
    opacity: 0;
    transform: translateX(100px) translateY(100px);
    transition: opacity 1.5s ease, transform 1.5s ease;
  }
  .member-1.visible,
  .member-2.visible,
  .member-3.visible,
  .member-4.visible,
  .member-5.visible,
  .member-6.visible {
    opacity: 1;
    transform: translate(0);
  }
  .member-1.visible {
